<%= simple_form_for(@form) do |f| %>
  
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title %>
  <%= f.input :body %>

  <p>Please select at least two categories.</p>
  <%= f.association :categories, as: :check_boxes %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
